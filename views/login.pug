doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/sign-in.css')
  body(class="text-center")
    main.form-signin.w-100.m-auto
      form(action="/login" method="post")
        h1.h3.mb-3.fw-normal 諮商系統
        .form-floating
          input(type="text" class="form-control" id="account" name="account" placeholder="Account" value=account )
          label(for="account") 帳號
        .form-floating
          input(type="password" class="form-control" id="password" name="password" placeholder="Password")
          label(for="password") 密碼
          span(style="color:red;")= Message
        button(class="w-100 btn btn-lg btn-primary" type="submit") 登入
        p.mt-5.mb-3.text-muted &copy; 2023
    script(src="/javascripts/bootstrap/bootstrap.min.js")